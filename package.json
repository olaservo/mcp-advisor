{
  "name": "mcp-advisor",
  "version": "0.0.2",
  "description": "MCP Server to assist LLMs and humans on Model Context Protocol (MCP) spec compliance and understanding",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "spec"
  ],
  "bin": {
    "mcp-advisor": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc && copyfiles \"spec/**/*\" dist",
    "postbuild": "node -e \"const fs=require('fs'); fs.copyFileSync('dist/index.js', 'dist/cli.js'); if(process.platform !== 'win32') require('child_process').execSync('chmod +x dist/index.js dist/cli.js')\"",
    "start": "node dist/index.js",
    "dev": "npx fastmcp dev src/index.ts",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/olaservo/mcp-advisor.git"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "llm",
    "ai",
    "schema",
    "specification"
  ],
  "author": "olaservo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/olaservo/mcp-advisor/issues"
  },
  "homepage": "https://github.com/olaservo/mcp-advisor#readme",
  "dependencies": {
    "fastmcp": "^1.20.5",
    "typescript": "^5.8.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.14",
    "copyfiles": "^2.4.1"
  }
}
